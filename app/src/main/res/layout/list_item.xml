<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="?android:selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/list_item_parent_layout"
        android:padding="16dp">
        <ImageView
            android:layout_width="?android:listPreferredItemHeightLarge"
            android:layout_height="?android:listPreferredItemHeightLarge"
            android:id="@+id/list_item_image_view"
            tools:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/primaryTextColor"
                android:id="@+id/list_item_title_text_view"
                android:textAppearance="?android:textAppearanceLarge"
                android:gravity="bottom"
                tools:text="Title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/list_item_artist_text_view"
                android:textColor="@color/secondaryTextColor"
                android:layout_weight="1"
                android:textAppearance="?android:textAppearanceMedium"
                android:gravity="top"
                tools:text="Artist"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
