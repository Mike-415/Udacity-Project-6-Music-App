<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="firstHalfChildLayout">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="parentNestedLayout">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
    </style>

    <style name="portraitParentNestedHalfLayout" parent="parentNestedLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>
    
    <style name="landscapeParentNestedHalfLayout" parent="parentNestedLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>

    </style>
    

    <style name="titleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="artistTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/standard_margin</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="albumCoverImageView">
        <item name="android:layout_width">@dimen/album_cover_size</item>
        <item name="android:layout_height">@dimen/album_cover_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="controlTopHalfLayout">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="timeTextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="timeSeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
    </style>

    <style name="controlBottomHalfLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="controlButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="playButton" parent="controlButton">
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_width">@dimen/play_button_size</item>
        <item name="android:layout_height">@dimen/play_button_size</item>
    </style>

    <style name="skipButton" parent="controlButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">@dimen/skip_button_size</item>
        <item name="android:layout_height">@dimen/skip_button_size</item>
    </style>

</resources>

